<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-7 text-bg-secondary p-3 rounded text-center">
            <h4>Account Register</h4>
            <hr>

            <form action="/users/register" method="post" class="log-div">

                <div class="mb-3">
                    <input type="text" class="form-control" name="UserName" placeholder="Name" maxlength="50" value="{{UserName}}">
                </div>

                <div class="mb-3">
                    <input type="email" class="form-control" name="EMail" placeholder="Email" value="{{EMail}}">
                </div>

                <div class="mb-3">
                    <input type="password" class="form-control" name="Password" placeholder="Password">
                </div>

                <div class="mb-3">
                    <input type="password" class="form-control" name="ConfirmPasword" placeholder="Confirm password">
                </div>

                <div class="d-grid gap-2">
                    <input type="submit" value="Register" class="btn btn-danger">
                </div>
            </form>
        </div>
    </div>
</div>